<%= form_with url: user_post_likes_path(user_id: @current_user.id, post_id: @post.id), model: Like do |form| %>
  <%= form.hidden_field :post_id, value: @post.id %>
  <div class='justify_right action_section'>
    <% if can? :destroy, @post %>
      <%= link_to "Delete Post", user_post_path(user_id: @post.author.id, id: @post.id), data: { turbo_method: :delete }, class:'button_style' %>
    <% end %>
    <%= form.submit "Like post", :class => "button_style" %>
  </div>
<% end %>